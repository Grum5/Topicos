<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="agenda2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:agenda2"
    xmlns:views="clr-namespace:agenda2.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="agenda2">

    <ShellContent
        Route="LoginPage" 
        ContentTemplate="{DataTemplate views:Login.LoginPage}" />

    <ShellContent
        Route="RegisterPage" 
        ContentTemplate="{DataTemplate views:Login.RegisterPage}" />

    <ShellContent
        Route="RecoverPage" 
        ContentTemplate="{DataTemplate views:Login.RecoverPage}" />

    <ShellContent 
        Route="AgendaPage"
        ContentTemplate="{DataTemplate views:Agenda.AgendaPage}"/>

</Shell>
